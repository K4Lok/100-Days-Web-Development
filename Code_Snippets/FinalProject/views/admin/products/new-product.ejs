<%- include('../../shared/includes/head', { pageTitle: 'Manage Products' }) %>
<link rel="stylesheet" href="/styles/product-form.css">
<link rel="stylesheet" href="/styles/navigation.css">
<link rel="stylesheet" href="/styles/auth.css">
<link rel="stylesheet" href="/styles/product.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Add new Product</h1>
        <form class="product-form" action="/admin/new-product?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
            <p>
                <label for="name">Product Name</label>
                <input type="text" id="name" name="name" required>
            </p>
            <p>
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/png, image/jpg">
            </p>
            <p>
                <label for="summary">Summary</label>
                <input type="text" id="summary" name="summary" maxlength="300" required>
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" id="price" name="price" min="0.01" step="0.01" required>
            </p>
            <p>
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="7" required></textarea>
            </p>
            <p class="btn-group">
                <button type="reset" class="btn btn-alt">Reset</button>
                <button type="submit" class="btn">Save</button>
            </p>
        </form>
    </main>
<%- include('../../shared/includes/footer'); %>